{
  "ssh_connections": [
    {
      "host": "butts",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/rufo/docker-compose"
          ]
        }
      ]
    },
    {
      "host": "homeassistant.lan",
      "args": [],
      "projects": [
        {
          "paths": [
            "/config"
          ]
        }
      ]
    }
  ],
  "base_keymap": "VSCode",
  "agent": {
    "default_model": {
      "provider": "openrouter",
      "model": "openai/gpt-5.2"
    },
    "enabled": true,
    "button": true,
    "model_parameters": []
  },
  "buffer_font_fallbacks": [
    "Cousine Nerd Font",
    "JetBrainsMono Nerd Font",
    "Menlo",
    "Monaco",
    "Courier New",
    "monospace"
  ],
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "colorize_brackets": true,
  "linked_edits": true,
  "show_edit_predictions": true,
  "tab_size": 2,
  "vim_mode": true,
  "icon_theme": "Zed (Default)",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "light",
    "light": "macOS Classic Light",
    "dark": "One Dark"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}

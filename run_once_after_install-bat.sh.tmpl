#!/bin/bash
echo "Installing bat..."
{{ if .brewPath -}}
brew install bat
{{ else if eq .chezmoi.os "linux" -}}
{{ if eq .idLike "arch" -}}
sudo pacman -Sy --noconfirm --needed bat
{{ else if eq .idLike "debian" -}}
TMP_DEB=$(mktemp)
curl -L {{ gitHubLatestReleaseAssetURL "sharkdp/bat" (printf "bat_*_%s.deb" .chezmoi.arch) }} -o "$TMP_DEB"
sudo dpkg -i "$TMP_DEB"
rm -f "$TMP_DEB"
{{ else -}}
echo "TODO: Can't install bat from release yet"
# TODO: need to map amd64 to x86_64 somewhere
exit 1
mkdir -p $HOME/.local/bin
curl -L {{ gitHubLatestReleaseAssetURL "sharkdp/bat" (printf "fzf-*-%s_%s.tar.gz" .chezmoi.os .chezmoi.arch) }} | tar -xz -C ~/.local/bin
{{- end -}}
{{- end -}}
